{
    "$schema": "http://json-schema.org/schema",
    "$id": "https://github.com/nuxis/p0sx-print/printjob.schema.json",
    "title": "P0sX Print Job",
    "description": "A print job from p0sX. It may be a customer receipt, a kichen job or something else.",
    "type": "object",
    "required": [
        "jobID",
        "jobType",
        "jobLines"
    ],
    "properties": {
        "jobID": {
            "description": "The id for this print job",
            "type": "integer"
        },
        "jobType": {
            "description": "The type of the print jub"
        },
        "orderId": {
            "description": "ID of the p0sX order",
            "type": "integer"
        },
        "customerId": {
            "description": "ID of the customer",
            "type": "string"
        },
        "register": {
            "description": "The p0sx register the job was created on",
            "type": "string"
        },
        "jobLines": {
            "description": "Lines containing items and ammount",
            "type": "array",
            "jobLine": {
                "type": "object",
                "properties": {
                    "lineItem": {
                        "description": "The line item"
                    },
                    " lineAmount": {
                        "description": "The line amount"
                    }
                },
                "required": [
                    "lineItem",
                    "lineAmount"
                ]
            }
        }
    }
}